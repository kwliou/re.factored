<% content_for :title, "#{@course.abbr} | #{@item.name} | Edit" %>

<%= render '/layouts/nav', :navigation =>
  [["Courses", courses_path],
  ["#{@course.dept} #{@course.number}", course_path(@course.params)],
  [@item.category_s, course_items_path(@course.nest_params.merge :category => @item.category.downcase)],
  [@item.name, course_item_path]] %>

<div id="content">
  <h1>Editing item</h1>

  <% form_for([@course, @item], :url => course_item_path(@item.params)) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :category %><br />
      <%= f.text_field :category %>
    </p>
    <p>
      <%= f.label :due_date %><br />
      <%= f.datetime_select :due_date %>
    </p>
    <p>
      <%= f.label :points %><br />
      <%= f.text_field :points %>
    </p>
    <p>
      <%= f.label :weight %><br />
      <%= f.text_field :weight %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit 'Update' %>
    </p>
  <% end %>

  <%= link_to 'Show', @item.params %> |
  <%= link_to 'Back', course_items_path(@course.nest_params) %>
</div>