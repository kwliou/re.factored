<% content_for :title, @course.abbr %>

<%= render '/layouts/nav', :navigation =>
  [[@course.school.name, @course.school],
   ["#{@course.dept} #{@course.number}", course_path]] %>
<div id="content">
  <h1 class="context"><%=h @course.name %></h1>
  <%= link_to 'Edit', edit_course_path(@course.params) %>
  <p>
    <strong>Term</strong> <%=h @course.pretty_term %>&nbsp;
    <strong>Days</strong> <%=h @course.days.each_char.map {|c| c == c.upcase ? c : ''} %>
  </p>
  <span class="section_header">Description</span>
  <%=h @course.description %>
</div>