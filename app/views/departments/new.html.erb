<div class="form" id="content">
  <h1>New department</h1>

  <% form_for(@department) do |f| %>
    <%= f.error_messages %>

    <p>
      <%= f.label :name %>
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :abbr, "Abbreviation" %>
      <%= f.text_field :abbr %>
    </p>
    <p>
      <%= f.submit 'Create' %>
    </p>
  <% end %>

<%= link_to 'Back', departments_path %>
</div>