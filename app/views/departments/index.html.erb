<div id="content">
  <h1>Listing departments</h1>

  <table>
    <tr>
      <th>Name</th>
      <th>Abbr</th>
    </tr>

  <% @departments.each do |department| %>
    <tr>
      <td><%=h department.name %></td>
      <td><%=h department.abbr %></td>
      <td><%= link_to 'Show', [@school, department] %></td>
      <td><%= link_to 'Edit', edit_school_department_path(@school, department) %></td>
      <!--td>%= link_to 'Destroy', destroy_department_path(@school, department), :confirm => 'Are you sure?', :method => :delete %></td-->
    </tr>
  <% end %>
  </table>

  <br />

  <%= link_to 'New department', new_school_department_path %>
</div>