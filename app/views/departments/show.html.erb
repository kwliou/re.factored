<% content_for :title, "#{@school.name} | #{@department.name}" %>

<div id="content">
  <h1>Department of <%=h @department.name %></h1>

  <% @department.courses.each do |course| %>
  <span style="text-decoration: underline"><%= link_to course.abbr, course_path(course.params), :style => 'text-decoration: none;  font-weight: bold' %></span>
  <em><%=h course.name %></em>
  <% end %>
</div>