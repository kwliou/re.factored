<% content_for :title, @profile ? 'My Profile' : 'Users' %>

<%= render '/layouts/nav', :no_semester => true, :navigation =>
  @profile ? [['My Profile', @user]] : [['Users', users_path]] %>

<div id="content">
  <h1 class="context"><%=h @user.first_name %> <%=h @user.last_name %></h1>
  <%= link_to 'Edit my information', edit_user_path(@user) if @profile %>
  <p><%= link_to 'Posts', user_posts_path(@user) %></p>
  <p><%= link_to 'Schools', user_schools_path(@user) %></p>
  <strong>Subscribed Courses</strong>
  <p>
    <% @user.courses.each do |course| %>
      <%= link_to course.abbr, course_path(course.params) %> (<%=h course.name %>)<br />
    <% end %>
  </p>
</div>